<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vidhi.computeraideddiagnostic.Doc"
    android:background="#0decb4">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/divider_horizontal_dark"
        android:text="Hello Dr.
You can select any 2 options.
1. 'View Reports List' will allow you to see the Reports of the Patients.
2. 'View Patients List' will directly take you to the list of
patients from where you can see everyone's information. "
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        tools:background="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/Patient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:background="@drawable/rounded_button"
        android:text="VIEW PATIENTS LIST" />


    <Button
        android:id="@+id/Reports"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="VIEW REPORTS"
        android:layout_below="@+id/Patient"
        android:layout_alignLeft="@+id/Patient"
        android:layout_alignStart="@+id/Patient"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/Logoutbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="LOGOUT"
        android:layout_below="@+id/Reports"
        android:layout_alignLeft="@+id/Reports"
        android:layout_alignStart="@+id/Reports"
        android:layout_marginTop="28dp" />

</RelativeLayout>