<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vidhi.computeraideddiagnostic.Fragments.drugs_history">

    <TextView
        android:id="@+id/past_medicine"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp"
        android:text="Past Medicines Used: "
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/current_medicine"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/past_medicine"
        android:layout_alignStart="@+id/past_medicine"
        android:layout_below="@+id/past_medicine"
        android:layout_marginTop="35dp"
        android:text="Current Medicines Taking :"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText"
        android:lines="4"
        android:minLines="2"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:ems="10"
        android:hint="Medicines along with doses"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/past_medicine"
        android:inputType="textPersonName|textMultiLine"
        android:layout_alignBaseline="@+id/past_medicine"
        android:layout_alignBottom="@+id/past_medicine"
        />

    <EditText
        android:id="@+id/editText2"
        android:lines="4"
        android:minLines="2"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignTop="@+id/current_medicine"
        android:ems="10"
        android:hint="Medicines along with doses"
        android:layout_alignBaseline="@id/current_medicine"
        android:textColor="#000000"
        android:inputType="textPersonName|textMultiLine" />

    <Button
        android:id="@+id/btn_drughistory"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_medicine"
        android:text="Save"
        android:background="#7f30a4ab"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true" />

    <!--<Button-->
        <!--android:id="@+id/btn_drughistory_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/btn_drughistory"-->
        <!--android:text="View"-->
        <!---->
        <!--android:layout_centerHorizontal="true" />-->

    <ImageView
        android:id="@+id/nextimg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/swipnext"
        android:layout_below="@+id/btn_drughistory"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginTop="-75dp"
        android:layout_marginRight="10dp"/>



</RelativeLayout>
