<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vidhi.computeraideddiagnostic.Fragments.history_past_illness">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/surgical_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Surgical History!"
        android:layout_marginTop="20dp"
        android:layout_weight="0.02"
        />

    <CheckBox
        android:layout_marginTop="15dp"
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surgical_history"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="13dp"
        android:ems="9"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:text="Head" />

    <CheckBox
        android:layout_marginTop="15dp"
        android:id="@+id/leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/head"
        android:layout_below="@+id/surgical_history"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="13dp"
        android:ems="9"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:text="Leg" />

    <CheckBox
        android:layout_marginTop="15dp"
        android:id="@+id/eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surgical_history"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="13dp"
        android:ems="9"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:text="Eye" />

    <CheckBox
        android:layout_marginTop="15dp"
        android:id="@+id/chest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surgical_history"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="13dp"
        android:ems="9"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:text="Chest" />

    <CheckBox
        android:layout_marginTop="25dp"
        android:id="@+id/others_surgical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="13dp"
        android:ems="9"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:text="Others" />

    <EditText
        android:id="@+id/others_surgical_history"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/leg"
        android:visibility="gone"
        android:ems="9"
        android:lines="2"
        android:scrollbars="vertical"
        android:maxLines="4"
        android:inputType="textMultiLine"
        android:hint="If any other surgical history?"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/medical_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Medical History!"
        android:layout_weight="0.02"
        android:layout_below="@+id/others_surgical"
        android:layout_alignRight="@+id/leg"
        android:layout_alignEnd="@+id/leg"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/others_medical_history"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="9"
        android:lines="4"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:inputType="textMultiLine"
        android:hint="Mention any longterm history?"
        android:textColor="#000000"
        android:layout_below="@+id/medical_history"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_pasthistory"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/others_medical_history"
        android:text="Save"
        android:background="#7f30a4ab"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <!--<Button-->
        <!--android:id="@+id/btn_pasthistory_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginRight="70dp"-->
        <!--android:layout_marginLeft="50dp"-->
        <!--android:text="View"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignTop="@+id/btn_pasthistory" />-->
    <ImageView
        android:id="@+id/nextimg5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/swipnext"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="280dp"
        android:visibility="gone"/>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
